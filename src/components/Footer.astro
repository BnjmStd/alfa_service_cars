---
import { Image } from "astro:assets";
import { BRAND } from "~/lib/brand";
import Social from "./Social.astro";

export const FOOTER = {
  logo: {
    src: BRAND.logo,
    alt: BRAND.name,
    width: 64,
    height: 64,
  },

  title: "¿Listo para transformar tu vehículo?",
  subtitle: "Agenda tu cita en nuestro estudio.",

  cta: {
    label: "WhatsApp Directo",
    href: "https://wa.me/5210000000000",
  },

  copyright: "Alfa Detailers Studio © 2026. Todos los derechos reservados.",
};
---

<footer class="footer" id="contacto">
  <div class="container footer-content">
    <Social />
    <Image
      width={FOOTER.logo.width}
      height={FOOTER.logo.height}
      src={FOOTER.logo.src}
      alt={FOOTER.logo.alt}
      class="footer-logo"
    />

    <h3 class="footer-title">{FOOTER.title}</h3>
    <p class="footer-text">{FOOTER.subtitle}</p>

    <a
      href={FOOTER.cta.href}
      class="btn btn-primary footer-btn"
      target="_blank"
      rel="noopener"
    >
      {FOOTER.cta.label}
    </a>

    <div class="footer-copy">
      <p>{FOOTER.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-surface);
    border-top: 1px solid var(--glass-border);
    padding: 80px 0 40px;
    text-align: center;
    color: var(--color-text-muted);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer-logo {
    height: 50px;
    margin: 0 auto 30px;
    opacity: 0.8;
  }

  .footer-title {
    margin-bottom: 20px;
  }

  .footer-text {
    margin-bottom: 30px;
  }

  .footer-btn {
    margin-bottom: 60px;
  }

  .footer-copy {
    margin-top: 60px;
    font-size: 0.9rem;
    opacity: 0.5;
  }
</style>
