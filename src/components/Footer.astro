---
import { Image } from "astro:assets";
import { BRAND } from "~/lib/brand";
import Social from "./Social.astro";
import { CLIENT_PHONE_NUMBER } from "~/lib/getPhoneNumber";

export const FOOTER = {
  logo: {
    src: BRAND.logo,
    alt: BRAND.name,
    width: 64,
    height: 64,
  },

  title: "¿Listo para transformar tu vehículo?",
  subtitle: "Agenda tu cita en nuestro estudio.",

  cta: {
    label: "WhatsApp Directo",
    href: `https://wa.me/${CLIENT_PHONE_NUMBER.replace(/\D/g, "")}`,
  },

  copyright: "Alfa Detailers Studio © 2026. Todos los derechos reservados.",
};
---

<footer class="container footer" id="contacto">
  <div class="footer-content">
    <Social />
    <Image
      width={FOOTER.logo.width}
      height={FOOTER.logo.height}
      src={FOOTER.logo.src}
      alt={FOOTER.logo.alt}
      class="footer-logo"
    />

    <h3 class="footer-title">{FOOTER.title}</h3>
    <p class="footer-text">{FOOTER.subtitle}</p>

    <a
      href={FOOTER.cta.href}
      class="btn btn-primary footer-btn"
      target="_blank"
      rel="noopener"
    >
      {FOOTER.cta.label}
    </a>

    <div class="footer-copy">
      <p>{FOOTER.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-surface);
    border-top: 1px solid var(--glass-border);
    text-align: center;
    color: var(--color-text-muted);

    padding-block: 50px;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  .footer-logo {
    height: 50px;
    object-fit: cover;
    aspect-ratio: 1/1;
    opacity: 0.8;
  }

  .footer-copy {
    font-size: 0.9rem;
    opacity: 0.5;
  }
</style>
