---
import Footer from "~/components/Footer.astro";
import { pageContent } from "../modules/somos/getInfo";
import Header from "~/components/Header.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Alfa Detailers Studio</title>
    <!-- Open Graph Meta Tags -->
    <meta
      property="og:title"
      content={`${pageContent.hero.title} ${pageContent.hero.highlight} | Alfa Detailers Studio`}
    />
    <meta property="og:description" content={pageContent.hero.subtitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://alfadetailers.cl/somos" />
    <meta property="og:image" content="/assets/somos/taller.webp" />
    <meta property="og:locale" content="es_CL" />
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={`${pageContent.hero.title} ${pageContent.hero.highlight} | Alfa Detailers Studio`}
    />
    <meta name="twitter:description" content={pageContent.hero.subtitle} />
    <meta name="twitter:image" content="/assets/somos/taller.webp" />
    <!-- Preload fuentes Inter locales -->
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-Italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-BoldItalic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body>
    <Header />

    <main class="layout-primary main-content">
      <div class="wrapper-container">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  @layer reset, theme, base, layout, utilities;

  @layer theme {
    :root {
      --color-bg-main: #000000;
      --color-bg-surface: #121212;
      --color-text-main: #ffffff;
      --color-text-muted: #a1a1a6;

      --color-accent: #d90429;
      --color-accent-glow: rgba(217, 4, 41, 0.5);

      --glass-bg: rgba(255, 255, 255, 0.05);
      --glass-border: rgba(255, 255, 255, 0.1);
      --glass-blur: 20px;

      --font-primary: "Inter", sans-serif;
      --border-radius-lg: 24px;
    }

    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-Regular.woff2") format("woff2");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-Bold.woff2") format("woff2");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-Italic.woff2") format("woff2");
      font-weight: 400;
      font-style: italic;
      font-display: swap;
    }
    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-BoldItalic.woff2") format("woff2");
      font-weight: 700;
      font-style: italic;
      font-display: swap;
    }
  }

  @layer base {
    body {
      background-color: var(--color-bg-main);
      color: var(--color-text-main);
      font-family: var(--font-primary);
      overflow-x: hidden;
    }

    h1,
    h2,
    h3,
    h4 {
      letter-spacing: -0.02em;
      font-weight: 700;
    }

    h2.section-title {
      font-size: 2.5rem;
      margin-bottom: 50px;
      text-align: center;
    }
  }

  @layer layout {
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .section {
      padding: 100px 0;
    }
  }

  /* 7. CAPA: UTILIDADES */
  @layer utilities {
    .text-gradient {
      background: linear-gradient(45deg, #ffffff, var(--color-accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .text-accent {
      color: var(--color-accent);
    }
  }

  @layer reset {
    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4 {
      text-wrap: balance;
      line-height: 1.2;
    }

    html,
    body {
      height: 100%;
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        "Helvetica Neue",
        Arial,
        sans-serif;
      background-color: #fff;
      color: #000;
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    ul,
    ol {
      list-style: none;
    }

    img,
    picture,
    video,
    canvas,
    svg {
      max-width: 100%;
      height: auto;
      display: block;
    }

    p {
      text-wrap: pretty;
      line-height: 1.5;
    }

    input,
    button,
    textarea,
    select {
      font: inherit;
    }

    a:not([href]) {
      text-decoration: none;
    }

    button {
      cursor: pointer;
      border: none;
      background: none;
      padding: 0;
    }

    html {
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    ul,
    ol {
      list-style: none;
    }

    :root {
      interpolate-size: allow-keywords;
    }
  }

  .main-content {
    min-block-size: 100vh;
    inline-size: 100%;
  }

  .layout-primary {
    display: grid;
    grid-template-columns:
      [full-width]
      minmax(1rem, 1fr)
      [content-start]
      min(1400px, 100% - 4rem)
      [content-end]
      minmax(1rem, 1fr)
      [full-width-end];
  }

  .layout-primary > * {
    grid-column: content-start / content-end;
  }

  .wrapper-container {
    min-block-size: 100vh;
  }
</style>

<script>
  import { $$ } from "~/lib/get_dom_element";

  document.addEventListener("DOMContentLoaded", () => {
    const anchors = $$<HTMLAnchorElement>('a[href^="#"]');

    anchors.forEach((anchor) => {
      anchor.addEventListener("click", (e: MouseEvent) => {
        e.preventDefault();

        const href = anchor.getAttribute("href");
        if (!href) return;

        const target = document.querySelector<HTMLElement>(href);
        if (!target) return;

        target.scrollIntoView({
          behavior: "smooth",
          block: "start",
        });
      });
    });
  });
</script>
