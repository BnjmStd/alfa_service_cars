---
import Footer from "~/components/Footer.astro";
import Header from "~/components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Alfa Detailers Studio</title>
  </head>
  <body>
    <Header />

    <main class="layout-primary main-content">
      <div class="wrapper-container">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  @layer reset, theme, base, layout, utilities;

  @layer theme {
    :root {
      /* Paleta de Colores Inspirada en Alfa Detailers + Apple Dark */
      --color-bg-main: #000000; /* Negro Puro */
      --color-bg-surface: #121212; /* Gris CarbÃ³n muy oscuro */
      --color-text-main: #ffffff;
      --color-text-muted: #a1a1a6; /* Gris Apple */

      /* El Rojo del Logo (Acento) */
      --color-accent: #d90429;
      --color-accent-glow: rgba(217, 4, 41, 0.5);

      /* Efectos de Vidrio (Glassmorphism) */
      --glass-bg: rgba(255, 255, 255, 0.05);
      --glass-border: rgba(255, 255, 255, 0.1);
      --glass-blur: 20px;

      /* TipografÃ­a */
      --font-primary: "Inter", sans-serif;
      --border-radius-lg: 24px;
    }
  }

  @layer base {
    body {
      background-color: var(--color-bg-main);
      color: var(--color-text-main);
      font-family: var(--font-primary);
      overflow-x: hidden;
    }

    h1,
    h2,
    h3,
    h4 {
      letter-spacing: -0.02em;
      font-weight: 700;
    }

    h2.section-title {
      font-size: 2.5rem;
      margin-bottom: 50px;
      text-align: center;
    }
  }

  @layer layout {
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .section {
      padding: 100px 0;
    }
  }

  /* 7. CAPA: UTILIDADES */
  @layer utilities {
    .text-gradient {
      background: linear-gradient(45deg, #ffffff, var(--color-accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .text-accent {
      color: var(--color-accent);
    }
  }

  @layer reset {
    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4 {
      text-wrap: balance; /* Evita saltos de lÃ­nea feos */
      line-height: 1.2;
    }

    html,
    body {
      height: 100%;
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        "Helvetica Neue",
        Arial,
        sans-serif;
      background-color: #fff;
      color: #000;
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased; /* Suaviza fuentes en WebKit */
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    ul,
    ol {
      list-style: none;
    }

    img,
    picture,
    video,
    canvas,
    svg {
      max-width: 100%;
      height: auto;
      display: block;
    }

    p {
      text-wrap: pretty; /* Optimiza la distribuciÃ³n de palabras */
      line-height: 1.5;
    }

    input,
    button,
    textarea,
    select {
      font: inherit;
    }

    /* ðŸ”¹ Evita subrayados en enlaces sin `href` */
    a:not([href]) {
      text-decoration: none;
    }

    /* ðŸ”¹ Mantiene la apariencia de los botones consistente */
    button {
      cursor: pointer;
      border: none;
      background: none;
      padding: 0;
    }

    /* ðŸ”¹ Oculta el desplazamiento horizontal no deseado */
    html {
      overflow-x: hidden;
      scroll-behavior: smooth; /* Hace que el desplazamiento sea mÃ¡s fluido */
    }

    /* ðŸ”¹ Evita estilos heredados en listas */
    ul,
    ol {
      list-style: none;
    }
    :root {
      interpolate-size: allow-keywords;
    }
  }

  .main-content {
    min-block-size: 100vh;
    inline-size: 100%;
  }

  .layout-primary {
    display: grid;
    grid-template-columns:
      [full-width]
      minmax(2rem, 1fr)
      [content-start]
      min(1400px, 100% - 4rem)
      [content-end]
      minmax(2rem, 1fr)
      [full-width-end];
  }

  .layout-primary > * {
    grid-column: content-start / content-end;
  }

  .wrapper-container {
    min-block-size: 100vh;
  }
</style>
