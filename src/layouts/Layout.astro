---
import Footer from "~/components/Footer.astro";
import { pageContent } from "../modules/somos/getInfo";
import Header from "~/components/Header.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = "Alfa Detailers Studio | Detailing Profesional en Chile",
  description = "Detailing profesional de alta gama en Chile. Protección cerámica, pulido, restauración y más. Transforma tu vehículo con los mejores especialistas.",
  ogImage = "/assets/somos/taller.webp",
  canonical = Astro.url.pathname,
} = Astro.props;

const fullTitle = title.includes("Alfa Detailers") ? title : `${title} | Alfa Detailers Studio`;
const siteUrl = "https://alfadetailers.cl";
const canonicalURL = new URL(canonical, siteUrl).href;
const ogImageURL = new URL(ogImage, siteUrl).href;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO Básico -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:site_name" content="Alfa Detailers Studio" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Keywords y geo -->
    <meta name="keywords" content="detailing chile, protección cerámica, pulido profesional, restauración auto, lavado detailing, detailing santiago" />
    <meta name="geo.region" content="CL" />
    <meta name="geo.placename" content="Chile" />
    
    <!-- Mobile Web App -->
    <meta name="theme-color" content="#d90429" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Preconnect para optimización -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "AutomotiveBusiness",
        "name": "Alfa Detailers Studio",
        "description": "Detailing profesional de alta gama en Chile. Especialistas en protección cerámica, pulido, restauración y más.",
        "url": "https://alfadetailers.cl",
        "logo": "https://alfadetailers.cl/favicon.svg",
        "image": "https://alfadetailers.cl/assets/somos/taller.webp",
        "telephone": "+56912345678",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "CL",
          "addressLocality": "Chile"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "addressCountry": "CL"
        },
        "priceRange": "$$",
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
          "opens": "09:00",
          "closes": "19:00"
        },
        "sameAs": [
          "https://www.instagram.com/alfadetailers",
          "https://www.facebook.com/alfadetailers"
        ]
      }
    </script>
    
    <!-- Preload fuentes Inter locales -->
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-Italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter/Inter_24pt-BoldItalic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body>
    <Header />

    <main class="layout-primary main-content">
      <div class="wrapper-container">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  @layer reset, theme, base, layout, utilities;

  @layer theme {
    :root {
      --color-bg-main: #000000;
      --color-bg-surface: #121212;
      --color-text-main: #ffffff;
      --color-text-muted: #a1a1a6;

      --color-accent: #d90429;
      --color-accent-glow: rgba(217, 4, 41, 0.5);

      --glass-bg: rgba(255, 255, 255, 0.05);
      --glass-border: rgba(255, 255, 255, 0.1);
      --glass-blur: 20px;

      --font-primary: "Inter", sans-serif;
      --border-radius-lg: 24px;
    }

    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-Regular.woff2") format("woff2");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-Bold.woff2") format("woff2");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-Italic.woff2") format("woff2");
      font-weight: 400;
      font-style: italic;
      font-display: swap;
    }
    @font-face {
      font-family: "Inter";
      src: url("/fonts/inter/Inter_24pt-BoldItalic.woff2") format("woff2");
      font-weight: 700;
      font-style: italic;
      font-display: swap;
    }
  }

  @layer base {
    body {
      background-color: var(--color-bg-main);
      color: var(--color-text-main);
      font-family: var(--font-primary);
      overflow-x: hidden;
    }

    h1,
    h2,
    h3,
    h4 {
      letter-spacing: -0.02em;
      font-weight: 700;
    }

    h2.section-title {
      font-size: 2.5rem;
      margin-bottom: 50px;
      text-align: center;
    }
  }

  @layer layout {
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .section {
      padding: 100px 0;
    }
  }

  /* 7. CAPA: UTILIDADES */
  @layer utilities {
    .text-gradient {
      background: linear-gradient(45deg, #ffffff, var(--color-accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .text-accent {
      color: var(--color-accent);
    }
  }

  @layer reset {
    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4 {
      text-wrap: balance;
      line-height: 1.2;
    }

    html,
    body {
      height: 100%;
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        "Helvetica Neue",
        Arial,
        sans-serif;
      background-color: #fff;
      color: #000;
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    ul,
    ol {
      list-style: none;
    }

    img,
    picture,
    video,
    canvas,
    svg {
      max-width: 100%;
      height: auto;
      display: block;
    }

    p {
      text-wrap: pretty;
      line-height: 1.5;
    }

    input,
    button,
    textarea,
    select {
      font: inherit;
    }

    a:not([href]) {
      text-decoration: none;
    }

    button {
      cursor: pointer;
      border: none;
      background: none;
      padding: 0;
    }

    html {
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    ul,
    ol {
      list-style: none;
    }

    :root {
      interpolate-size: allow-keywords;
    }
  }

  .main-content {
    min-block-size: 100vh;
    inline-size: 100%;
  }

  .layout-primary {
    display: grid;
    grid-template-columns:
      [full-width]
      minmax(1rem, 1fr)
      [content-start]
      min(1400px, 100% - 4rem)
      [content-end]
      minmax(1rem, 1fr)
      [full-width-end];
  }

  .layout-primary > * {
    grid-column: content-start / content-end;
  }

  .wrapper-container {
    min-block-size: 100vh;
  }

  .badge {
    display: inline-block;
    color: var(--color-accent);
    background: rgba(217, 4, 41, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.75rem;
    margin-bottom: 1rem;
    border: 1px solid var(--color-accent-glow);
  }
</style>

<script>
  import { $$ } from "~/lib/get_dom_element";

  document.addEventListener("DOMContentLoaded", () => {
    const anchors = $$<HTMLAnchorElement>('a[href^="#"]');

    anchors.forEach((anchor) => {
      anchor.addEventListener("click", (e: MouseEvent) => {
        e.preventDefault();

        const href = anchor.getAttribute("href");
        if (!href) return;

        const target = document.querySelector<HTMLElement>(href);
        if (!target) return;

        target.scrollIntoView({
          behavior: "smooth",
          block: "start",
        });
      });
    });
  });
</script>
