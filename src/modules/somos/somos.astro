---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import Visit from "./components/visit.astro";
import { pageContent } from "./getInfo";
import Porque from "./components/porque.astro";

const todasLasFotos = await getCollection("somos");

const fotoHero = todasLasFotos.find((img) => img.id === "taller");
const fotoEquipo = todasLasFotos.find((img) => img.id === "team");
---

<section class="about-container">
  <div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>
        {pageContent.hero.title}
        <span class="highlight">{pageContent.hero.highlight}</span>
      </h1>
      <p class="hero-subtitle">{pageContent.hero.subtitle}</p>
    </div>

    {
      fotoHero && (
        <Image
          src={fotoHero.data.foto}
          alt={fotoHero.data.description}
          class="hero-bg-img"
        />
      )
    }
  </div>

  <div class="story-section wrapper">
    <div class="story-text">
      <span class="badge">{pageContent.story.badge}</span>
      <h2>
        {pageContent.story.title}
        <br />
        <span class="text-gradient">{pageContent.story.gradient}</span>
      </h2>

      <div class="text-block">
        {pageContent.story.paragraphs.map((p) => <p>{p}</p>)}
      </div>
    </div>

    <div class="story-image-container">
      {
        fotoEquipo && (
          <Image src={fotoEquipo.data.foto} alt={fotoEquipo.data.description} />
        )
      }
      <div class="glow-effect"></div>
    </div>
  </div>

  <Porque />

  <Visit />

  <div class="cta-section wrapper center">
    <div class="cta-card">
      <h2>{pageContent.cta.title}</h2>
      <p>{pageContent.cta.desc}</p>

      <div class="cta-buttons">
        <a href="/contacto" class="btn btn-primary"
          >{pageContent.cta.primaryBtn}</a
        >
        <a href="/servicios" class="btn btn-outline"
          >{pageContent.cta.secondaryBtn}</a
        >
      </div>
    </div>
  </div>
</section>

<style is:global>
  :root {
    --color-bg-main: #000000;
    --color-bg-surface: #121212;
    --color-text-main: #ffffff;
    --color-text-muted: #a1a1a6;

    --color-accent: #d90429;
    --color-accent-glow: rgba(217, 4, 41, 0.5);

    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-blur: 20px;

    --font-primary: "Inter", sans-serif;
    --border-radius-lg: 24px;
  }

  h1,
  h2,
  h4 {
    color: var(--color-text-main);
    line-height: 1.2;
    font-weight: 700;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }
  p {
    color: var(--color-text-muted);
  }

  strong {
    color: var(--color-text-main);
    font-weight: 600;
  }

  .highlight {
    color: var(--color-accent);
    text-shadow: 0 0 20px var(--color-accent-glow);
  }

  .wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  .center {
    text-align: center;
  }

  .story-image-container {
    position: relative;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    border: 1px solid var(--glass-border);
  }

  .story-image-container img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.7s ease;
  }

  .story-image-container:hover img {
    transform: scale(1.05);
  }
</style>

<style>
  .about-container {
    font-family: var(--font-primary);
    color: var(--color-text-main);
    background-color: var(--color-bg-main);
    line-height: 1.6;
    overflow-x: hidden;
  }

  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: var(--color-bg-main);
    text-align: center;
    padding: 0 1rem;
  }

  .hero-bg-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
    z-index: 0;
    object-position: center top;

    -webkit-mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 65%,
      rgba(0, 0, 0, 0) 100%
    );

    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 65%,
      rgba(0, 0, 0, 0) 100%
    );
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, var(--color-bg-main), transparent);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #e5e5e5;
  }

  /* --- 2. STORY SECTION --- */
  .story-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 900px) {
    .story-section {
      grid-template-columns: 1fr 1fr;
    }
  }

  .text-block p {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }

  .glow-effect {
    position: absolute;
    top: -50px;
    right: -50px;
    width: 150px;
    height: 150px;
    background: var(--color-accent);
    filter: blur(80px);
    opacity: 0.4;
    z-index: 1;
    pointer-events: none;
  }

  /* --- 4. CTA SECTION --- */
  .cta-section {
    position: relative;
  }

  .cta-card {
    background: linear-gradient(
      135deg,
      var(--color-bg-surface),
      var(--color-bg-main)
    );
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-lg);
    padding: 4rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .cta-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 5px;
    background: var(--color-accent);
    box-shadow: 0 0 20px 5px var(--color-accent-glow);
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
</style>
