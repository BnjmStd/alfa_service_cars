---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const todasLasFotos = await getCollection("somos");
const fotoHero = todasLasFotos.find((img) => img.id === "taller");

// Datos de contacto (puedes moverlos a tu objeto pageContent si prefieres)
const contacto = {
  direccion: "Av. Ejemplo 1234, Talca",
  horario: "Lunes a Viernes ¬∑ 09:00 ‚Äì 18:30",
  telefono: "+56 9 1234 5678",
  googleMapsUrl: "https://goo.gl/maps/tu-enlace-aqui"
};
---

<section class="visit-section">
  <div class="wrapper visit-container">
    
    <div class="visit-content">
      <header class="visit-header">
        <span class="badge">Ubicaci√≥n Estrat√©gica</span>
        <h2>Ven a <span class="highlight">Visitarnos</span></h2>
        <p class="description">
          Equipamiento profesional y atenci√≥n personalizada en el coraz√≥n de Talca. 
          Tu veh√≠culo merece un est√°ndar superior.
        </p>
      </header>

      <div class="visit-details">
        <div class="detail-item">
          <span class="icon">üìç</span>
          <div>
            <strong>Direcci√≥n</strong>
            <p>{contacto.direccion}</p>
          </div>
        </div>
        
        <div class="detail-item">
          <span class="icon">‚è∞</span>
          <div>
            <strong>Horario</strong>
            <p>{contacto.horario}</p>
          </div>
        </div>

        <div class="detail-item">
          <span class="icon">üìû</span>
          <div>
            <strong>Tel√©fono</strong>
            <p>{contacto.telefono}</p>
          </div>
        </div>
      </div>

      <div class="visit-actions">
        <a href={contacto.googleMapsUrl} target="_blank" class="btn btn-primary">
          <span>Ver en Google Maps</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
