---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const todasLasFotos = await getCollection("somos");
const fotoHero = todasLasFotos.find((img) => img.id === "taller");

const [currentLocation] = await getCollection("location");
if (!currentLocation || !currentLocation.data.visible) return;

const { badge, title, details, cta } = currentLocation.data;
---

<section class="visit-section">
  <div class="wrapper visit-container">
    <div class="visit-content">
      <header class="visit-header">
        <span class="badge">{badge}</span>

        <h2>
          {title.text.replace(title.highlight, "")}
          <span class="highlight">{title.highlight}</span>
        </h2>
      </header>

      <div class="visit-details">
        {
          details.map((detail) => (
            <div class="detail-item">
              <span class="icon">{detail.icon}</span>
              <div>
                <strong>{detail.label}</strong>
                {detail.content.map((line) => (
                  <p>{line}</p>
                ))}
              </div>
            </div>
          ))
        }
      </div>

      <div class="visit-actions">
        <a href={cta.url} target={cta.target} class="btn btn-primary">
          <span>{cta.text}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M15 3h6v6"></path>
            <path d="M10 14 21 3"></path>
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="visit-image-wrapper">
      {
        fotoHero && (
          <Image
            src={fotoHero.data.foto}
            alt={fotoHero.data.description}
            class="main-image"
          />
        )
      }
      <div class="image-decoration"></div>
    </div>
  </div>
</section>

<style>
  .visit-section {
    padding: 100px 0;
    background-color: var(--color-bg-main);
  }

  .visit-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 992px) {
    .visit-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .visit-header {
    margin-bottom: 2.5rem;
  }

  .visit-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin: 1rem 0;
  }

  .description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .visit-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .detail-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .detail-item .icon {
    font-size: 1.5rem;
    background: var(--color-bg-surface);
    padding: 10px;
    border-radius: 12px;
    border: 1px solid var(--glass-border);
  }

  .detail-item strong {
    display: block;
    color: var(--color-text-bright);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .detail-item p {
    color: var(--color-text-muted);
    margin: 0;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-weight: 600;
    transition: transform 0.2s ease;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
  }

  .visit-image-wrapper {
    position: relative;
  }

  .main-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 24px;
    border: 1px solid var(--glass-border);
    position: relative;
    z-index: 2;
  }

  .image-decoration {
    position: absolute;
    top: 20px;
    right: -20px;
    width: 100%;
    height: 100%;
    background: var(--color-primary);
    opacity: 0.1;
    border-radius: 24px;
    z-index: 1;
  }
</style>
