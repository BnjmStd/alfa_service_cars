---
import Hero from "~/modules/services/components/hero.astro";
import Benefit from "~/modules/services/components/benefit.astro";
import Faqs from "~/modules/services/components/faqs.astro";
import Last from "~/modules/services/components/last.astro";
import WhatsappAnchor from "./components/whatsappAnchor.astro";
import Process_section from "./components/process_section.astro";
import TrustBlock from "./components/TrustBlock.astro";
import Comparison_section from "./components/comparison_section.astro";
import Carousel_section from "./components/carousel_section.astro";
const { section, serviceType } = Astro.props;
---

{section.type === "hero-video" && <Hero {...section} />}
{section.type === "trust-block" && <TrustBlock {...section} />}
{section.type === "process-steps" && <Process_section {...section} />}
{section.type === "feature-list" && <Benefit {...section} />}
{section.type === "faq-list" && <Faqs {...section} />}
{
  section.type === "comparative" && (
    <Comparison_section {...section} serviceId={Astro.params.id} />
  )
}
{
  section.type === "carrousel" && (
    <Carousel_section
      {...section}
      serviceId={Astro.params.id}
      categoria={serviceType}
    />
  )
}
{section.type === "cta-block" && <Last {...section} />}
{section.type === "whatsapp-anchor" && <WhatsappAnchor {...section} />}
