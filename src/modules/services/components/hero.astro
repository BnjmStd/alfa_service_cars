---
import { Image } from "astro:assets";
import type { HeroSection } from "~/layouts/sub.astro";
import { CLIENT_PHONE_NUMBER } from "~/lib/getPhoneNumber";
const section = Astro.props as HeroSection;
const { title, subtitle, description, videoSrc, cta, serviceImage, serviceId } = Astro.props;
---

<section class="service-hero" id={section.id}>
  {serviceImage && (
    <Image
      src={serviceImage}
      alt={title}
      class="service-hero-image"
      width={1920}
      height={1080}
      transition:name={`service-hero-${serviceId}`}
    />
  )}

  <div class="service-hero-overlay"></div>

  <div class="service-hero-content reveal">
    <span class="badge">{subtitle}</span>
    <h1 class="service-hero-title">{title}</h1>
    <p class="service-hero-desc">{description}</p>
    <button class="btn btn-primary" data-service={title} data-phone={CLIENT_PHONE_NUMBER}>
      {cta.text}
    </button>
  </div>
</section>

<script>
  function initHeroWhatsApp() {
    const heroButton = document.querySelector(".service-hero .btn-primary") as HTMLButtonElement | null;
    if (!heroButton) return;

    heroButton.addEventListener("click", () => {
      const serviceName = heroButton.dataset.service || "este servicio";
      const phone = heroButton.dataset.phone || "56930636488";

      const message = `Â¡Hola Alfa Detailers! ðŸ‘‹

Estoy interesado en el servicio de *${serviceName}*.

Â¿PodrÃ­an darme mÃ¡s informaciÃ³n sobre precios, disponibilidad y detalles?

Â¡Gracias!`;

      const encodedMsg = encodeURIComponent(message);
      const cleanPhone = phone.replace(/\D/g, "");
      window.open(`https://wa.me/${cleanPhone}?text=${encodedMsg}`, "_blank");
    });
  }

  // Inicializar en carga de pÃ¡gina y navegaciones SPA
  document.addEventListener("astro:page-load", initHeroWhatsApp);
</script>

<style>
  .service-hero {
    position: relative;
    height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    text-align: center;
  }
  
  .service-hero-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    opacity: 0.4;
  }
  .service-hero-overlay {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(to top, var(--color-bg-main) 10%, rgba(0, 0, 0, 0.6) 80%),
      radial-gradient(
        circle at top right,
        var(--color-accent-glow),
        transparent 50%
      );
    z-index: 1;
  }
  .service-hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    padding-top: 60px;
  }

  .service-hero-title {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 25px;
    background: linear-gradient(to bottom right, #ffffff, #aaaaaa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .service-hero-desc {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 40px;
  }
</style>
