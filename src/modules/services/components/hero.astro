---
import { Image } from "astro:assets";
import type { HeroSection } from "~/layouts/sub.astro";
const section = Astro.props as HeroSection;
const { title, subtitle, description, videoSrc, cta, serviceImage, serviceId } = Astro.props;
---

<section class="service-hero" id={section.id}>
  {serviceImage && (
    <Image
      src={serviceImage}
      alt={title}
      class="service-hero-image"
      width={1920}
      height={1080}
      transition:name={`service-hero-${serviceId}`}
    />
  )}

  <div class="service-hero-overlay"></div>

  <div class="service-hero-content reveal">
    <span class="badge">{subtitle}</span>
    <h1 class="service-hero-title">{title}</h1>
    <p class="service-hero-desc">{description}</p>
    <a href={cta.href} class="btn btn-primary">{cta.text}</a>
  </div>
</section>

<style>
  .service-hero {
    position: relative;
    height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    text-align: center;
  }
  
  .service-hero-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    opacity: 0.4;
  }
  .service-hero-overlay {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(to top, var(--color-bg-main) 10%, rgba(0, 0, 0, 0.6) 80%),
      radial-gradient(
        circle at top right,
        var(--color-accent-glow),
        transparent 50%
      );
    z-index: 1;
  }
  .service-hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    padding-top: 60px;
  }

  .service-hero-title {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 25px;
    background: linear-gradient(to bottom right, #ffffff, #aaaaaa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .service-hero-desc {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 40px;
  }
</style>
