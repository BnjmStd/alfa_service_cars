---
import type { FeatureSection } from "~/layouts/sub.astro";

const section = Astro.props as FeatureSection;
const { title, subtitle, features } = section;
---

<section class="section" id={section.id}>
  <div class="container">
    <div class="section-header reveal">
      <p class="service-hero-subtitle">{subtitle}</p>
      <h2 style="font-size: clamp(2rem, 4vw, 3rem);">
        {title}
      </h2>
    </div>

    <div class="benefits-grid">
      {
        features.map((feature) => (
          <div class="benefit-item reveal">
            <span class="benefit-icon">{feature.icon}</span>
            <h3 class="benefit-title">{feature.title}</h3>
            <p class="benefit-desc">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    text-align: center;
  }
  .benefit-item {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-lg);
    padding: 40px 20px;
    transition: transform 0.3s ease;
  }
  .benefit-item:hover {
    transform: translateY(-10px);
    border-color: var(--color-accent);
  }
  .benefit-icon {
    font-size: 3rem;
    color: var(--color-accent);
    margin-bottom: 20px;
    display: inline-block;
  }
  .benefit-title {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
  .benefit-desc {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }
</style>
