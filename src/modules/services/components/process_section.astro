---
const processData = {
  title: "Nuestro",
  titleAccent: "Proceso",
  subtitle: "Calidad artesanal con tecnología de punta.",
  steps: [
    {
      title: "Descontaminado Profundo",
      description:
        "Eliminamos impurezas férricas y minerales incrustados en los poros de la laca mediante descontaminación química y mecánica (Clay Bar).",
    },
    {
      title: "Corrección de Pintura",
      description:
        "Pulido en múltiples etapas para eliminar micro-rayas (swirls) y devolver la profundidad original al color del vehículo.",
    },
    {
      title: "Blindaje Cerámico",
      description:
        "Aplicación de recubrimientos de SiO2 que crean una capa rígida, ultra-brillante y repelente a líquidos sobre la superficie.",
    },
  ],
};
---

<section id="proceso" class="section">
  <div class="container">
    <div class="section-header">
      <h2 style="font-size: 3rem;">
        {processData.title}{" "}
        <span class="text-accent">{processData.titleAccent}</span>
      </h2>

      <p style="color: var(--color-text-muted);">
        {processData.subtitle}
      </p>
    </div>

    <div class="steps-container">
      {
        processData.steps.map((step, index) => (
          <div class="step-item">
            <div class="step-num">
              {(index + 1).toString().padStart(2, "0")}
            </div>

            <div class="step-text">
              <h4>{step.title}</h4>
              <p>{step.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* --- PASOS DEL PROCESO --- */
  .steps-container {
    z-index: 10;
    position: relative;
    margin-top: 40px;
  }
  .step-item {
    display: flex;
    gap: 30px;
    margin-bottom: 60px;
    opacity: 1;
    transform: translateY(30px);
    transition: 0.8s ease-out;
  }
  .step-item.visible {
    opacity: 1;
    transform: translateY(0);
  }
  .step-num {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-accent);
    min-width: 40px;
  }
  .step-text h4 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
  .step-text p {
    color: var(--color-text-muted);
  }
</style>
