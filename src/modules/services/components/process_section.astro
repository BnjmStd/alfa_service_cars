---
interface ProcessSection {
  id: string;
  type: "process-steps";
  subtitle: string;
  title: string;
  steps: string[];
}

const section = Astro.props as ProcessSection;
const { id, subtitle, title, steps } = section;
---

<section id={id} class="section">
  <div class="container">
    <div class="section-header reveal">
      <p class="service-hero-subtitle">{subtitle}</p>
      <h2 style="font-size: clamp(2rem, 4vw, 3rem);">
        {title}
      </h2>
    </div>

    <div class="steps-container">
      {
        steps.map((step, index) => (
          <div class="step-item reveal">
            <div class="step-num">
              {(index + 1).toString().padStart(2, "0")}
            </div>

            <div class="step-text">
              <p>{step}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* --- PASOS DEL PROCESO --- */
  .steps-container {
    z-index: 10;
    position: relative;
    margin-top: 40px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 25px 40px;
  }
  
  .step-item {
    display: flex;
    gap: 15px;
    opacity: 1;
    transform: translateY(30px);
    transition: 0.8s ease-out;
    padding: 20px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-md);
    transition: all 0.3s ease;
  }
  
  .step-item:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--color-accent);
  }
  
  .step-item.visible {
    opacity: 1;
  }
  
  .step-num {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--color-accent);
    min-width: 35px;
    flex-shrink: 0;
  }
  
  .step-text p {
    color: var(--color-text-main);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .steps-container {
      grid-template-columns: 1fr;
      gap: 15px;
    }
    
    .step-item {
      padding: 15px;
    }
    
    .step-num {
      font-size: 1.1rem;
      min-width: 30px;
    }
    
    .step-text p {
      font-size: 0.9rem;
    }
  }
</style>
