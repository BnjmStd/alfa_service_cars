---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const collectionServices = await getCollection("services");

const itemsBento = collectionServices.map((service) => ({
  title: service.data.title,
  description: service.data.description,
  imageSrc: service.data.imageSrc,
  videoSrc: service.data.videoSrc || null,
  href: service.data.href,
}));
---

<section id="servicios" class="section">
  <div class="container">
    <h2 class="section-title scan-observe">
      Nuestros <span class="text-gradient">Servicios</span>
    </h2>

    <div class="grid-bento">
      {
        itemsBento.map((item, index) => (
          <a
            class={`bento-card ${index === 0 ? "card-large" : ""} ${index === 3 ? "card-wide" : ""}`}
            href={item.href}
          >
            <div class="card-media">
              <Image
                src={item.imageSrc}
                alt={item.title}
                width={800}
                height={600}
                class="bento-img"
              />
              {item.videoSrc && (
                <video src={item.videoSrc} muted loop playsinline />
              )}
            </div>

            <div class="card-content">
              <h3 class="card-title">{item.title}</h3>
              <p class="card-desc">{item.description}</p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
<style>
  .bento-card {
    position: relative;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(var(--glass-blur));
    border-radius: var(--border-radius-lg);
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 320px;
    position: relative;
    overflow: hidden;
    transition:
      transform 0.4s ease,
      border-color 0.4s ease,
      background 0.4s ease;
  }

  .card-content {
    inset: auto 0 0 0;

    position: absolute;
    z-index: 2;
    padding: 30px;
  }
  .card-title {
    font-size: 1.8rem;
    margin-bottom: 10px;
  }
  .card-desc {
    color: var(--color-text-main);
  }

  .card-media {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .card-media img,
  .card-media video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;

    filter: grayscale(60%);
  }

  /* Estado inicial */
  .card-media video {
    opacity: 0;
    transform: scale(1.05);
  }

  .bento-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9),
      rgba(217, 4, 41, 0.25),
      transparent
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 1;
    pointer-events: none;
  }

  .bento-card:hover::before {
    opacity: 1;
  }

  /* Hover: aparece video */
  .bento-card:hover .card-media video {
    opacity: 1;
    transform: scale(1);
  }

  .bento-card:hover .card-media img {
    opacity: 0;
  }

  /* Asegurar capas correctas */
  .bento-card {
    isolation: isolate;
  }

  .card-media {
    z-index: 0;
  }

  .bento-card::after {
    z-index: 1;
  }

  .card-content {
    z-index: 2;
  }
</style>

<style>
  .grid-bento {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media (min-width: 768px) {
    .grid-bento {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, auto);
    }
    .card-large {
      grid-row: span 2;
    }

    .card-wide {
      grid-column: span 2;
    }
  }
</style>

<script>
  import { $$, $ } from "~/lib/get_dom_element";

  const cards = $$<HTMLElement>(".bento-card");

  cards.forEach((card) => {
    const video = $<HTMLVideoElement>("video", card);
    if (!video) return;

    card.addEventListener("mouseenter", () => {
      video.currentTime = 0;
      video.play();
    });

    card.addEventListener("mouseleave", () => {
      video.pause();
    });
  });
</script>
