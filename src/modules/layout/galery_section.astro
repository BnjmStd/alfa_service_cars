---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const todasLasFotos = await getCollection("gallery");

const previewFotos = todasLasFotos.slice(0, 3);

const galleryData = {
  title: "Resultados",
  titleAccent: "Alfa",
  cta: {
    text: "Ver galería completa",
    href: "/galeria",
  },
};
---

<section
  id="galeria"
  class="section gallery-section"
  aria-labelledby="gallery-section-title"
>
  <div class="container">
    <h2 id="gallery-section-title" class="section-title">
      {galleryData.title}{" "}
      <span class="text-accent">{galleryData.titleAccent}</span>
    </h2>

    <div class="gallery-wrapper">
      <div class="gallery-grid gallery-preview">
        {
          previewFotos.map((item) => (
            <article class="gallery-item">
              <Image
                src={item.data.foto}
                alt={item.data.titulo}
                width={600}
                height={400}
                class="gallery-img"
              />

              <div class="gallery-overlay">
                <span class="gallery-tag">{item.data.categoria}</span>
                <h3 class="gallery-title">{item.data.titulo}</h3>
              </div>
            </article>
          ))
        }
      </div>

      <div class="gallery-mask">
        <a href={galleryData.cta.href} class="btn btn-primary gallery-cta">
          {galleryData.cta.text}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Wrapper con máscara */
  .gallery-wrapper {
    position: relative;
  }

  /* Preview: limita altura */
  .gallery-preview {
    max-height: 640px; /* 3 items + hint del 4º */
    overflow: hidden;
  }

  /* Mask degradado */
  .gallery-mask {
    padding-block-start: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* CTA sobre la mask */
  .gallery-cta {
    pointer-events: auto;
    backdrop-filter: blur(8px);
  }

  /* Grid base */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .gallery-item {
    position: relative;
    height: 300px;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    border: 1px solid var(--glass-border);
    cursor: pointer;
  }

  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  /* Hover imagen */
  .gallery-item:hover .gallery-img {
    transform: scale(1.1);
  }

  .gallery-item:hover .gallery-overlay {
    transform: translateY(0);
    opacity: 1;
  }
</style>
