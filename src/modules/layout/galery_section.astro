---
const galleryData = {
  title: "Resultados",
  titleAccent: "Alfa",
  cta: {
    text: "Ver galería completa",
    href: "/galeria",
  },
  items: [
    {
      src: "https://images.unsplash.com/photo-1619767886558-efdc259cde1a?q=80&w=1080&auto=format&fit=crop",
      alt: "Porsche 911 Carrera con tratamiento cerámico",
      tag: "Cerámico 5 Años",
      title: "Porsche 911 Carrera",
    },
    {
      src: "https://images.unsplash.com/photo-1619767886558-efdc259cde1a?q=80&w=1080&auto=format&fit=crop",
      alt: "Grabado de patentes en vidrios",
      tag: "Normativa",
      title: "Grabado de Precisión",
    },
    {
      src: "https://images.unsplash.com/photo-1619767886558-efdc259cde1a?q=80&w=1080&auto=format&fit=crop",
      alt: "Restauración interior de piel",
      tag: "Interior",
      title: "Restauración de Piel",
    },
  ],
};
---

<section
  id="galeria"
  class="section gallery-section"
  aria-labelledby="gallery-section-title"
>
  <div class="container">
    <h2 id="gallery-section-title" class="section-title">
      {galleryData.title}{" "}
      <span class="text-accent">{galleryData.titleAccent}</span>
    </h2>

    <div class="gallery-wrapper">
      <div class="gallery-grid gallery-preview">
        {
          galleryData.items.map((item) => (
            <article class="gallery-item">
              <img
                src={item.src}
                alt={item.alt}
                class="gallery-img"
                loading="lazy"
                decoding="async"
              />

              <div class="gallery-overlay">
                <span class="gallery-tag">{item.tag}</span>
                <h3 class="gallery-title">{item.title}</h3>
              </div>
            </article>
          ))
        }
      </div>

      <div class="gallery-mask">
        <a href={galleryData.cta.href} class="btn btn-primary gallery-cta">
          {galleryData.cta.text}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Wrapper con máscara */
  .gallery-wrapper {
    position: relative;
  }

  /* Preview: limita altura */
  .gallery-preview {
    max-height: 640px; /* 3 items + hint del 4º */
    overflow: hidden;
  }

  /* Mask degradado */
  .gallery-mask {
    position: absolute;
    bottom: -50%;
    left: 0;
    width: 100%;
    height: 220px;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;

    background: linear-gradient(
      to top,
      var(--color-bg-main) 25%,
      rgba(0, 0, 0, 0.6) 60%,
      transparent 100%
    );
  }

  /* CTA sobre la mask */
  .gallery-cta {
    pointer-events: auto;
    transform: translateY(40px);
    backdrop-filter: blur(8px);
  }

  /* Grid base */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .gallery-item {
    position: relative;
    height: 300px;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    border: 1px solid var(--glass-border);
    cursor: pointer;
  }

  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  /* Hover imagen */
  .gallery-item:hover .gallery-img {
    transform: scale(1.1);
  }

  /* Overlay */
  .gallery-overlay {
    position: absolute;
    inset: auto 0 0 0;
    padding: 30px;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9),
      rgba(217, 4, 41, 0.2),
      transparent
    );
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.4s ease;
  }

  .gallery-item:hover .gallery-overlay {
    transform: translateY(0);
    opacity: 1;
  }

  .gallery-title {
    font-size: 1.2rem;
    color: white;
  }

  .gallery-tag {
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 600;
    text-transform: uppercase;
  }
</style>
