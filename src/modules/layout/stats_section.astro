---
const statsData = [
  {
    label: "Años de experiencia",
    value: 5,
    suffix: "+",
    animated: true,
  },
  {
    label: "Garantía en cada trabajo",
    text: "100%",
    animated: false,
  },
  {
    label: "Trabajo Profesional",
    value: 100,
    suffix: "%",
    animated: true,
  },
  {
    label: "Atención personalizada",
    value: 24,
    suffix: "/7",
    animated: true,
  },
];
---

<section
  id="stats"
  class="section"
  style="background: var(--color-bg-surface);"
>
  <div class="container stats-grid reveal">
    {
      statsData.map((stat) => (
        <div>
          {stat.animated ? (
            <span
              class="stat-number"
              data-target={stat.value}
              data-suffix={stat.suffix ?? ""}
            >
              0
            </span>
          ) : (
            <span class="stat-number">{stat.text}</span>
          )}
          <span class="stat-label">{stat.label}</span>
        </div>
      ))
    }
  </div>
</section>

<style>
  /* --- CONTADORES (STATS) --- */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    text-align: center;
  }
  .stat-number {
    font-size: 4rem;
    font-weight: 800;
    display: block;
    margin-bottom: 10px;
    color: white;
  }
  .stat-label {
    font-size: 1rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 2px;
  }
</style>

<script is:inline>
  // --- ANIMACIÓN DE CONTADORES ---
  const countUp = (el) => {
    const target = Number(el.dataset.target);
    const suffix = el.dataset.suffix || "";
    let count = Number(el.innerText);
    const increment = target / 60;

    if (count < target) {
      el.innerText = Math.ceil(count + increment);
      requestAnimationFrame(() => countUp(el));
    } else {
      el.innerText = target + suffix;
    }
  };

  // --- INTERSECTION OBSERVER PARA REVELAR ELEMENTOS ---
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;

        const numbers = entry.target.querySelectorAll(
          ".stat-number[data-target]",
        );

        numbers.forEach((num) => countUp(num));
        observer.unobserve(entry.target);
      });
    },
    { threshold: 0.2 },
  );

  document
    .querySelectorAll(".stats-grid")
    .forEach((el) => observer.observe(el));

  document
    .querySelectorAll(".reveal, .stats-grid")
    .forEach((el) => observer.observe(el));
</script>
