<style>
  .hero-title {
    color: #ffffff;
    transition: color 0.5s ease;
  }

  .hero-shine {
    position: relative;
    display: inline-block;
    overflow: hidden;
  }

  .hero-title::before {
    content: "";
    position: absolute;
    top: 0;
    left: -75%;
    width: 25%;
    height: 100%;
    background: linear-gradient(
      120deg,
      rgba(240, 17, 17, 0) 0%,
      rgba(255, 255, 255, 0.6) 50%,
      rgba(222, 63, 63, 0) 100%
    );
    transform: skewX(-25deg);
    animation: scan 2s infinite;
  }

  .hero-title-2::before {
    animation-delay: 0.7s;
  }

  @keyframes scan {
    0% {
      left: -75%;
    }
    100% {
      left: 125%;
    }
  }
</style>

<style>
  /* -- Hero Section (Video) -- */
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      linear-gradient(to top, var(--color-bg-main) 10%, rgba(0, 0, 0, 0.6) 60%),
      radial-gradient(
        circle at top right,
        var(--color-accent-glow),
        transparent 50%
      );
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    padding-top: 60px; /* Compensar navbar */
  }

  .hero-title {
    font-size: clamp(3rem, 6vw, 5.5rem);
    line-height: 1.1;
    margin-bottom: 20px;
    /* Efecto de texto degradado met치lico */
    background: linear-gradient(to bottom right, #ffffff, #aaaaaa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 40px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const shineContainer = document.querySelector(".hero-shine");
    const mask = document.getElementById("mask-fade-text-grefg");

    if (shineContainer && mask) {
      shineContainer.addEventListener("mouseenter", () => {
        // Reiniciar animaci칩n
        mask.classList.remove("animate-shine");
        void mask.offsetWidth; // Force reflow
        mask.classList.add("animate-shine");
      });

      // Opcional: limpiar al salir
      shineContainer.addEventListener("mouseleave", () => {
        mask.classList.remove("animate-shine");
      });
    }
  });
</script>
