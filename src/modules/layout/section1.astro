---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const [hero] = await getCollection("main");
const data = hero.data;

const heroData = {
  background: {
    src: data.background.src,
    alt: data.background.alt,
  },
  title: data.title,
  subtitle: data.subtitle,
  cta: {
    text: data.cta.text,
    href: data.cta.href,
  },
};
---

<section class="hero">
  <Image
    class="hero-video"
    src={heroData.background.src}
    alt={heroData.background.alt}
  />

  <div class="hero-overlay"></div>

  <div class="hero-content">
    {
      heroData.title.map((line, index) => (
        <div class="hero-shine">
          <h1 class={`hero-title ${index === 1 ? "hero-title-2" : ""}`}>
            {line}
          </h1>
        </div>
      ))
    }

    <p class="hero-subtitle">
      {heroData.subtitle}
    </p>

    <div>
      <a href={heroData.cta.href} class="btn btn-primary">
        {heroData.cta.text}
      </a>
    </div>
  </div>
</section>

<style>
  .hero-title {
    color: #ffffff;
    transition: color 0.5s ease;
  }

  .hero-shine {
    position: relative;
    display: inline-block;
    overflow: hidden;
  }

  .hero-title::before {
    content: "";
    position: absolute;
    top: 0;
    left: -75%;
    width: 25%;
    height: 100%;
    background: linear-gradient(
      120deg,
      rgba(240, 17, 17, 0) 0%,
      rgba(255, 255, 255, 0.6) 50%,
      rgba(222, 63, 63, 0) 100%
    );
    transform: skewX(-25deg);
    animation: scan 2s infinite;
  }

  .hero-title-2::before {
    animation-delay: 0.7s;
  }

  @keyframes scan {
    0% {
      left: -75%;
    }
    100% {
      left: 125%;
    }
  }
</style>

<style>
  /* -- Hero Section (Video) -- */
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;

    mask: linear-gradient(to bottom, #000 60%, transparent);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(50, 50, 50, 0.8);
    z-index: 2;
    mask: linear-gradient(to bottom, #000 60%, transparent);
  }

  .hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    max-width: 800px;
    padding-top: 60px; /* Compensar navbar */
  }

  .hero-title {
    font-size: clamp(3rem, 6vw, 5.5rem);
    line-height: 1.1;
    margin-bottom: 20px;
    /* Efecto de texto degradado met√°lico */
    background: linear-gradient(to bottom right, #ffffff, #aaaaaa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 40px;
  }
</style>

